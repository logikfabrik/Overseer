<UserControl x:Class="Logikfabrik.Overseer.WPF.Provider.AppVeyor.Views.ConnectionSettingsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:extensions="clr-namespace:Logikfabrik.Overseer.WPF.Extensions;assembly=Logikfabrik.Overseer.WPF"
             xmlns:controls="clr-namespace:Logikfabrik.Overseer.WPF.Controls;assembly=Logikfabrik.Overseer.WPF"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <StackPanel Margin="25">
        <controls:Icon Foreground="#FFFFFFFF" 
                    Margin="5" 
                    HorizontalAlignment="Left" 
                    Width="50" 
                    Height="50">
            <controls:Icon.Data>
                <GeometryGroup>
                    <Geometry>F 1 M 308.194,190.55 C 273.398,164.038 222.033,170.666 192.208,205.463 164.04,241.916 169.011,293.281 203.807,319.793 238.603,347.961 289.969,341.333 318.137,304.88 347.961,270.084 342.99,218.718 308.194,190.55 Z</Geometry>
                    <Geometry>F 1 M 255.171,0 C 114.33,0 0,114.33 0,255.171 0,397.67 114.33,512 255.171,512 397.669,512 512,397.67 512,255.171 512,114.33 397.669,0 255.171,0 Z M 359.56,323.107 L 246.887,483.831 C 230.318,483.831 197.178,478.86 182.265,472.232 L 280.026,377.786 C 243.573,386.071 205.463,379.443 175.638,354.589 140.841,328.077 125.929,283.34 130.9,241.916 L 43.081,338.02 C 43.081,338.02 31.482,316.479 28.168,276.712 L 182.265,155.754 C 228.661,122.614 291.624,120.958 336.363,155.754 386.071,195.521 396.013,268.427 359.56,323.107 Z</Geometry>
                </GeometryGroup>
            </controls:Icon.Data>
        </controls:Icon>
        <TextBlock Text="AppVeyor" 
                       Style="{StaticResource TextBlockHeading0DefaultStyle}" />
        <StackPanel Margin="0 0 0 20">
            <TextBlock Text="Connection Name" 
                           Style="{StaticResource TextBlockDefaultStyle}" />
            <TextBox Text="{Binding Path=Name, Mode=TwoWay, ValidatesOnDataErrors=True}"
                         Style="{StaticResource TextBoxDefaultStyle}" />
        </StackPanel>
        <StackPanel Margin="0 0 0 40">
            <TextBlock Text="Token" 
                           Style="{StaticResource TextBlockDefaultStyle}" />
            <TextBox Text="{Binding Path=Token, Mode=TwoWay, ValidatesOnDataErrors=True}"
                         Style="{StaticResource TextBoxDefaultStyle}" />
            <TextBlock Style="{StaticResource TextBlockDetailDefaultStyle}">
                    You create your token at <Hyperlink NavigateUri="https://ci.appveyor.com" extensions:HyperlinkExtensions.IsExternal="True">appveyor.com</Hyperlink>
            </TextBlock>
        </StackPanel>
    </StackPanel>
</UserControl>

