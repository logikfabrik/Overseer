<UserControl
    x:Class="Logikfabrik.Overseer.WPF.Client.Views.UserControls.ValueControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="300"
    d:DesignWidth="300"
    mc:Ignorable="d">
    <Grid Visibility="{Binding HasValue, Mode=OneWay, RelativeSource={RelativeSource AncestorType=UserControl}, Converter={StaticResource BooleanToVisibilityConverter}}">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Viewbox>
            <Canvas>
                <Path Data="{Binding Icon, Mode=OneWay, RelativeSource={RelativeSource AncestorType=UserControl}}" />
            </Canvas>
        </Viewbox>
        <TextBlock
            Grid.Column="1"
            Text="{Binding Value, Mode=OneWay, RelativeSource={RelativeSource AncestorType=UserControl}}"
            ToolTip="{Binding Value, Mode=OneWay, RelativeSource={RelativeSource AncestorType=UserControl}}" />
    </Grid>
</UserControl>