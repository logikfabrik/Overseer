<UserControl x:Class="Logikfabrik.Overseer.WPF.Client.Views.BuildNotificationView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:cal="http://www.caliburnproject.org"
             xmlns:s="clr-namespace:Logikfabrik.Overseer.WPF.Styles;assembly=Logikfabrik.Overseer.WPF"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300"
             Width="300">
    <UserControl.Resources>
        <SolidColorBrush x:Key="UserControl.Static.Background" 
                         Color="{x:Static s:CommonColors.ControlStaticBackground}" />
        <SolidColorBrush x:Key="UserControl.Static.Border" 
                         Color="#FFBBBBBB" />
    </UserControl.Resources>
    <Border Background="{StaticResource UserControl.Static.Background}">
        <StackPanel>

            <TextBlock x:Name="Notification" 
                       Style="{StaticResource TextBlockDetailDefaultStyle}" />

            <Button Content="Close" x:Name="Close" />
            <ContentControl Focusable="False" 
                            cal:View.Model="{Binding BuildViewModel}" />
        </StackPanel>
    </Border>
</UserControl>
