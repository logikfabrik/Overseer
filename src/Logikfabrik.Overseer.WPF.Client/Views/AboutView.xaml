<UserControl
    x:Class="Logikfabrik.Overseer.WPF.Client.Views.AboutView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:extensions="clr-namespace:Logikfabrik.Overseer.WPF.Extensions;assembly=Logikfabrik.Overseer.WPF"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="300"
    d:DesignWidth="300"
    mc:Ignorable="d">
    <ScrollViewer>
        <StackPanel Margin="10">
            <TextBlock Text="About Overseer" />
            <TextBlock Text="{Binding Version, Mode=OneTime}" />
            <TextBlock Text="Overseer is a Windows task bar app for build notifications." TextWrapping="Wrap" />
            <TextBlock TextWrapping="Wrap">
                Overseer is Open Source (MIT), and you're welcome to contribute!
                Help out on
                <Hyperlink extensions:HyperlinkExtensions.IsExternal="True" NavigateUri="https://github.com/logikfabrik/overseer">GitHub</Hyperlink>
                .
            </TextBlock>
        </StackPanel>
    </ScrollViewer>
</UserControl>
