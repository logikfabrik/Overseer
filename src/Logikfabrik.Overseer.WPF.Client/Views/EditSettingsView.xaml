<UserControl x:Class="Logikfabrik.Overseer.WPF.Client.Views.EditSettingsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <StackPanel>
        <StackPanel Margin="0 0 0 20">
            <TextBlock Text="Proxy URL" 
                       Style="{StaticResource TextBlockDefaultStyle}" />
            <TextBox Text="{Binding Path=ProxyUrl, Mode=TwoWay, ValidatesOnDataErrors=True}"
                     Style="{StaticResource TextBoxDefaultStyle}" />
        </StackPanel>
        <StackPanel Margin="0 0 0 20">
            <TextBlock Text="Proxy Username" 
                       Style="{StaticResource TextBlockDefaultStyle}" />
            <TextBox Text="{Binding Path=ProxyUsername, Mode=TwoWay, ValidatesOnDataErrors=True}"
                     Style="{StaticResource TextBoxDefaultStyle}" />
        </StackPanel>
        <StackPanel Margin="0 0 0 20">
            <TextBlock Text="Proxy Password" 
                       Style="{StaticResource TextBlockDefaultStyle}" />
            <TextBox Text="{Binding Path=ProxyPassword, Mode=TwoWay, ValidatesOnDataErrors=True}"
                     Style="{StaticResource TextBoxDefaultStyle}" />
        </StackPanel>
        <StackPanel Orientation="Horizontal">
            <Button x:Name="EditSettings" 
                    Content="OK" 
                    Style="{StaticResource ButtonDefaultStyle}" 
                    IsDefault="True"
                    Margin="0 0 2 0" />
            <Button x:Name="ViewConnections" 
                    Content="Cancel" 
                    Style="{StaticResource ButtonDefaultStyle}" />
        </StackPanel>
    </StackPanel>
</UserControl>
