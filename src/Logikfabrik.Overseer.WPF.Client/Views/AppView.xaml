<Window
    x:Class="Logikfabrik.Overseer.WPF.Client.Views.AppView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Style="{StaticResource WindowDefaultStyle}">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <StackPanel Background="#FF525252">
            <TextBlock
                x:Name="ViewName"
                Margin="10,5,10,5"
                FontWeight="Bold"
                Style="{StaticResource TextBlockDefaultStyle}"
                TextAlignment="Center" />
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <Button
                    x:Name="ViewConnections"
                    Content="Connections"
                    Style="{StaticResource ButtonDefaultStyle}" />
                <Button
                    x:Name="EditSettings"
                    Grid.Column="1"
                    Content="Settings"
                    Style="{StaticResource ButtonDefaultStyle}" />
            </Grid>
        </StackPanel>
        <ContentControl
            x:Name="ActiveItem"
            Grid.Row="1"
            HorizontalAlignment="Stretch"
            VerticalAlignment="Stretch"
            Focusable="False" />
    </Grid>
</Window>
