        <ContentControl cal:View.Model="{Binding Menu, Mode=OneTime}" Style="{StaticResource app__menu}" />
        <ContentControl cal:View.Model="{Binding Error, Mode=OneTime}" Style="{StaticResource app__error}" />
    </Grid>
</views:AppWindow>