<UserControl x:Class="Logikfabrik.Overseer.WPF.Client.Views.ProjectBuildView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:cal="http://www.caliburnproject.org"
             xmlns:styles="clr-namespace:Logikfabrik.Overseer.WPF.Styles;assembly=Logikfabrik.Overseer.WPF"
             xmlns:c="clr-namespace:Logikfabrik.Overseer.WPF.Controls;assembly=Logikfabrik.Overseer.WPF"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Button HorizontalContentAlignment="Stretch" 
            VerticalContentAlignment="Stretch"
            Padding="0"
            BorderThickness="0">
        <Button.Content>
            <Border BorderBrush="{x:Static styles:CommonBrushes.ControlFocus}" 
                    BorderThickness="5 0 0 0">
                <Grid Margin="10">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="20" />
                    </Grid.ColumnDefinitions>
                    <TextBlock x:Name="ProjectName"
                               Grid.Row="0" 
                               Grid.Column="0"
                               FontSize="18"
                               Text="Project name" />
                    <c:BusyIndicator Grid.Row="0"
                                      Grid.Column="1"
                                      Visibility="{Binding IsBusy, Converter={StaticResource BooleanToVisibilityConverter}}" />
                    <ContentControl Grid.Row="1" 
                                    Grid.Column="0"
                                    Grid.ColumnSpan="2"
                                    Focusable="False" 
                                    cal:View.Model="{Binding BuildViewModel}" />
                </Grid>
            </Border>
        </Button.Content>
    </Button>
</UserControl>
