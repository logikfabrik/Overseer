<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <LinearGradientBrush x:Key="Status.Queued" SpreadMethod="Repeat" StartPoint="0,0" EndPoint="1,1">
        <GradientStop Offset="0" Color="#5500FF" />
        <GradientStop Offset="0.5" Color="#5500FF" />
        <GradientStop Offset="0.5" Color="Transparent" />
        <GradientStop Offset="1" Color="Transparent" />
        <LinearGradientBrush.RelativeTransform>
            <ScaleTransform ScaleX="0.01" ScaleY="0.01" />
        </LinearGradientBrush.RelativeTransform>
    </LinearGradientBrush>

    <SolidColorBrush x:Key="Status.InProgress" Color="#5500FF" />
    <SolidColorBrush x:Key="Status.Succeeded" Color="#AAFF00" />
    <SolidColorBrush x:Key="Status.Stopped" Color="#FFFF00" />
    <SolidColorBrush x:Key="Status.Failed" Color="#FF3300" />

    <SolidColorBrush x:Key="ProgressControl.Background" Color="{StaticResource Color.LightGrey}" />
    <SolidColorBrush x:Key="ProgressControl.Foreground" Color="{StaticResource Color.Yellow}" />

    <Color x:Key="Color.AltGrey">#5A5A5A</Color>

    <SolidColorBrush x:Key="Brush.AltGrey" Color="{StaticResource Color.AltGrey}" />

</ResourceDictionary>