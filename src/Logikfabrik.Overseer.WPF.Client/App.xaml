<Application x:Class="Logikfabrik.Overseer.WPF.Client.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:Logikfabrik.Overseer.WPF.Client"
             xmlns:client="clr-namespace:Logikfabrik.Overseer.WPF.Client">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary>
                    <client:AppBootstrapper x:Key="Bootstrapper" />
                    <Style x:Key="AppView" TargetType="{x:Type Window}">
                        <Setter Property="Background" Value="#FF565656" />
                        
                    </Style>
                    
                    
                    <Style x:Key="BuildProviderView" TargetType="{x:Type Button}">
                        <Setter Property="Background" Value="#FF737373" />
                        <Setter Property="Foreground" Value="#FFFFFFFF" />
                        <Setter Property="BorderBrush" Value="#FF3E3E3E" />
                        <Setter Property="BorderThickness" Value="1" />
                    </Style>
                </ResourceDictionary>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>
