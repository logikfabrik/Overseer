<Application x:Class="Logikfabrik.Overseer.WPF.Client.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:client="clr-namespace:Logikfabrik.Overseer.WPF.Client">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/Logikfabrik.Overseer.WPF;component/Styles/Shared.xaml" />
                <ResourceDictionary Source="pack://application:,,,/Logikfabrik.Overseer.WPF;component/Styles/Button.xaml" />
                <ResourceDictionary Source="pack://application:,,,/Logikfabrik.Overseer.WPF;component/Styles/TextBlock.xaml" />
                <ResourceDictionary Source="pack://application:,,,/Logikfabrik.Overseer.WPF;component/Styles/TextBox.xaml"/>
                <ResourceDictionary Source="pack://application:,,,/Logikfabrik.Overseer.WPF;component/Styles/ScrollBar.xaml"/>
                <ResourceDictionary Source="pack://application:,,,/Logikfabrik.Overseer.WPF;component/Styles/ScrollViewer.xaml"/>
                <ResourceDictionary>
                    <client:AppBootstrapper x:Key="Bootstrapper" />
                    <Style x:Key="AppView" TargetType="{x:Type Window}">
                        <Setter Property="Width" Value="400" />
                        <Setter Property="Height" Value="700" />
                        <Setter Property="Background" Value="#FF565656" />
                        <!--<Setter Property="WindowStyle" Value="None" />-->
                    </Style>
                </ResourceDictionary>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>
