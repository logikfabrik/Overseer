<UserControl x:Class="Logikfabrik.Overseer.WPF.Controls.Icon"
             x:Name="UserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Width="10"
             Height="10">
    <Viewbox Stretch="Uniform"
             Width="{Binding Path=Width, ElementName=UserControl}" 
             Height="{Binding Path=Height, ElementName=UserControl}">
        <Path Data="{Binding Data, ElementName=UserControl}" 
              Fill="{Binding Foreground, ElementName=UserControl}" />
    </Viewbox>
</UserControl>
