<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:cal="http://www.caliburnproject.org">
    <Style x:Key="Views.Views.BuildProvider" TargetType="{x:Type UserControl}">
        <Style.Resources>
            <Style TargetType="{x:Type Path}">
                <Setter Property="Fill" Value="{Binding (TextElement.Foreground), RelativeSource={RelativeSource AncestorType={x:Type Button}}}" />
            </Style>
        </Style.Resources>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate>
                    <Button
                        Width="200"
                        Height="200"
                        VerticalContentAlignment="Stretch"
                        cal:Message.Attach="AddConnection">
                        <Grid>
                            <Viewbox Width="60" Height="60">
                                <ContentPresenter Content="{TemplateBinding Property=ContentControl.Content}" />
                            </Viewbox>
                            <TextBlock
                                VerticalAlignment="Bottom"
                                Text="{Binding ProviderName, Mode=OneTime}"
                                TextAlignment="Center"
                                TextWrapping="Wrap" />
                        </Grid>
                    </Button>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>