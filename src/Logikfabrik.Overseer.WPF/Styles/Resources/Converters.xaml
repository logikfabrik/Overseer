<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:c="clr-namespace:Logikfabrik.Overseer.WPF.Converters"
    xmlns:s="clr-namespace:System.Threading.Tasks;assembly=mscorlib">

    <x:Array x:Key="StatusFaulted" Type="{x:Type s:TaskStatus}">
        <s:TaskStatus>Faulted</s:TaskStatus>
    </x:Array>

    <x:Array x:Key="StatusRunning" Type="{x:Type s:TaskStatus}">
        <s:TaskStatus>WaitingForActivation</s:TaskStatus>
        <s:TaskStatus>WaitingToRun</s:TaskStatus>
        <s:TaskStatus>Running</s:TaskStatus>
    </x:Array>

    <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
    <c:BuildStatusToStyleConverter x:Key="BuildStatusToStyleConverter" />


    <c:TaskStatusToBooleanConverter x:Key="TaskStatusFaultedToBooleanConverter" TrueFor="{StaticResource StatusFaulted}" />
    <c:TaskStatusToBooleanConverter x:Key="TaskStatusRunningToBooleanConverter" TrueFor="{StaticResource StatusRunning}" />


    <c:ValueConverterGroup x:Key="TaskStatusFaultedToVisibilityConverter">
        <c:TaskStatusToBooleanConverter TrueFor="{StaticResource StatusFaulted}" />
        <BooleanToVisibilityConverter />
    </c:ValueConverterGroup>
    
</ResourceDictionary>