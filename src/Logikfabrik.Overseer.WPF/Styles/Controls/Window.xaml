<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:s="clr-namespace:Logikfabrik.Overseer.WPF.Styles">
    <SolidColorBrush x:Key="Window.Static.Background" 
                     Color="{x:Static s:CommonColors.WindowStaticBackground}" />
    <Style x:Key="WindowDefaultStyle" 
           TargetType="{x:Type Window}">
        <Setter Property="Width" 
                Value="400" />
        <Setter Property="MinWidth" 
                Value="250" />
        <Setter Property="Height" 
                Value="700" />
        <Setter Property="Background" 
                Value="{StaticResource Window.Static.Background}" />
        <Setter Property="UseLayoutRounding" 
                Value="True" />
    </Style>
</ResourceDictionary>