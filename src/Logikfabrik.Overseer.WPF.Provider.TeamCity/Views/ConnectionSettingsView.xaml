<UserControl
    x:Class="Logikfabrik.Overseer.WPF.Provider.TeamCity.Views.ConnectionSettingsView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:markupExtensions="clr-namespace:Logikfabrik.Overseer.WPF.MarkupExtensions;assembly=Logikfabrik.Overseer.WPF"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:teamCity="clr-namespace:Logikfabrik.Overseer.WPF.Provider.TeamCity"
    d:DesignHeight="300"
    d:DesignWidth="300"
    mc:Ignorable="d">
    <StackPanel>
        <StackPanel Margin="0,0,0,20">
            <Viewbox
                Width="50"
                Height="50"
                Margin="5"
                HorizontalAlignment="Left"
                Stretch="UniformToFill">
                <Path Fill="#FFFFFF">
                    <Path.Data>
                        <GeometryGroup>
                            <Geometry>F 1 M 0,0 L 0,186.011 186.011,186.011 186.011,0 0,0 Z M 18.601,24.879 L 86.727,24.879 86.727,41.155 61.849,41.155 61.849,105.305 43.712,105.305 43.712,41.155 18.601,41.155 18.601,24.879 Z M 86.728,161.132 L 18.601,161.132 18.601,148.808 86.727,148.808 86.727,161.132 Z M 128.114,106.653 C 105.763,107.16 87.234,89.452 86.727,67.1 86.713,66.489 86.713,65.877 86.727,65.266 86.727,42.015 103.932,23.181 128.811,23.181 143.924,23.181 153.225,28.296 160.666,35.737 L 149.272,48.758 C 142.994,43.178 136.716,39.691 128.578,39.691 115.093,39.691 105.095,51.084 105.095,64.802 L 105.095,65.034 C 105.095,78.984 114.628,90.378 128.578,90.378 137.879,90.378 143.459,86.657 149.737,80.845 L 161.131,92.239 C 152.761,101.073 143.692,106.653 128.114,106.653 Z</Geometry>
                        </GeometryGroup>
                    </Path.Data>
                </Path>
            </Viewbox>
            <TextBlock FontSize="24" Text="TeamCity" />
        </StackPanel>
        <StackPanel Margin="0,0,0,20">
            <TextBlock Text="Connection Name" />
            <TextBox Text="{Binding Path=Name, Mode=TwoWay, ValidatesOnDataErrors=True, UpdateSourceTrigger=PropertyChanged}" />
        </StackPanel>
        <StackPanel Margin="0,0,0,20">
            <TextBlock Text="URL" />
            <TextBox Text="{Binding Path=Url, Mode=TwoWay, ValidatesOnDataErrors=True, UpdateSourceTrigger=PropertyChanged}" />
            <TextBlock FontSize="10" Text="{Binding Path=BaseUri, Mode=OneWay}" />
        </StackPanel>
        <StackPanel Margin="0,0,0,20">
            <TextBlock Text="Authentication Type" />
            <ComboBox
                DisplayMemberPath="DisplayName"
                ItemsSource="{markupExtensions:EnumToItemsSourceMarkup {x:Type teamCity:AuthenticationType}}"
                SelectedValue="{Binding Path=AuthenticationType, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                SelectedValuePath="Value" />
        </StackPanel>
        <StackPanel Margin="0,0,0,20">
            <StackPanel>
                <TextBlock Text="Username" />
                <TextBox Text="{Binding Path=Username, Mode=TwoWay, ValidatesOnDataErrors=True, UpdateSourceTrigger=PropertyChanged}" />
            </StackPanel>
            <StackPanel>
                <TextBlock Text="Password" />
                <TextBox Text="{Binding Path=Password, Mode=TwoWay, ValidatesOnDataErrors=True, UpdateSourceTrigger=PropertyChanged}" />
            </StackPanel>
        </StackPanel>
    </StackPanel>
</UserControl>